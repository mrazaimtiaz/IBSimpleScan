<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/back"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/back"
        android:layout_width="50dp"
        android:layout_height="50dp"

        />


    <Button
        android:id="@+id/printButton"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toEndOf="@+id/back"
        android:text="Print"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btnaction"
        android:textSize="23sp"
        android:layout_width="150dp"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/textPassoert"
        android:textColor="#000"
        android:text=""
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textPassoert"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_width="500dp"
        android:layout_height="110dp" />

    <ImageView
        android:id="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_width="500dp"
        android:layout_height="110dp" />

    <ImageView
        android:id="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_width="500dp"
        android:layout_height="110dp" />

    <ImageView
        android:id="@+id/imageViewCamera"
        app:layout_constraintTop_toBottomOf="@+id/textPassoert"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/imageViewCameraTwo"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCamera"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>