<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:padding="10dp"
    android:paddingStart="110dp"


    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button

        android:id="@+id/btnMzr"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/ic_baseline_menu_book_24"
        android:text="MZR Passport"
        android:layout_marginTop="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"
        android:layout_marginStart="100dp"
        android:drawablePadding="-15dp"
        android:textSize="22sp"
        android:layout_width="340dp"
        android:layout_height="135dp" />

    <Button

        android:id="@+id/btnBiometric"
        android:layout_marginTop="95dp"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/ic_baseline_fingerprint_24"

        android:layout_marginStart="100dp"
        app:layout_constraintStart_toEndOf="@+id/btnMzr"
        android:text="Finger Biometric"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="20dp"
        android:drawablePadding="-15dp"
        android:textSize="22sp"
        android:layout_width="340dp"
        android:layout_height="135dp" />






    <Button

        android:id="@+id/btnIrisCamera"
        android:text="Iris Camera"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/ic_baseline_camera_alt_24"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMzr"
        app:layout_constraintStart_toStartOf="@id/btnMzr"
        android:paddingTop="20dp"
        android:drawablePadding="-15dp"
        android:textSize="22sp"
        android:layout_width="340dp"
        android:layout_height="135dp"/>

    <Button

        android:id="@+id/btnNfc"
        android:text="NFC"
        android:layout_marginTop="15dp"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/ic_baseline_rss_feed_24"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMzr"
        app:layout_constraintStart_toEndOf="@+id/btnIrisCamera"
        android:paddingTop="20dp"
        android:drawablePadding="-15dp"
        android:textSize="22sp"
        android:layout_width="340dp"
        android:layout_height="135dp"/>


    <Button

        android:id="@+id/btnCivilId"

        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/ic_baseline_credit_card_24"
        android:text="Civil Id Reader"
        app:layout_constraintStart_toStartOf="@id/btnMzr"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btnIrisCamera"
        android:paddingTop="20dp"
        android:drawablePadding="-15dp"
        android:textSize="22sp"
        android:layout_width="340dp"
        android:layout_height="135dp" />


    <Button

        android:id="@+id/btnPrint"
        android:background="@drawable/btnbg"
        android:drawableTop="@drawable/ic_baseline_print_24"
        android:text="Printer"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toEndOf="@+id/btnCivilId"
        app:layout_constraintTop_toBottomOf="@+id/btnIrisCamera"
        android:paddingTop="20dp"
        android:drawablePadding="-15dp"
        android:textSize="22sp"
        android:layout_width="340dp"
        android:layout_height="135dp" />

</androidx.constraintlayout.widget.ConstraintLayout>